<!doctype html>
<html>
    
<head>
    <head>
        <% include ../includes/head %>
        <script src="https://cdn.firebase.com/js/client/2.4.2/firebase.js"></script>
        <script type="text/javascript" src="/controller/app.js"></script>
        <script type="text/javascript" src="/controller/contas/novacontroller.js"></script>
    </head>
</head>

<body>
    <div class= "Container">
        <% include ../includes/header %> 
		<div ng-app = "noexcell" ng-controller = "novacontroller">
		  <h5>Cadastrar </h5>
          <br>
           <div class="container-fluid">
                <div class="row">
                    <div class="input-field col s6">
                        <input   placeholder="Digite o nome da conta" id="resposta2" length="100" type="text" class="validate" required name ="resposta2" >
                        <label for="resposta2">Nome da Conta</label>
                    </div>
                     <div class="input-field col s6">
                        <select ng-options="item as categoria.nome for categoria in categorias track by categoria.id" ng-model="selected" ng-click="atualizarCategoria()"></select>
                        <label>Selecione a categoria</label>
                    </div>
                </div>
                <div class="row">
                 
                    <div class="input-field col s4">
                        <input   placeholder="Digite o descricao" length="100" type="text" class="validate" required ng-model="conta.descricao">
                        <label for="resposta2">Descricao</label>
                    </div>
                 
                    <div class="col s3">
                        <label for="resposta2">Vencimento</label>
                        <input type="date" class="datepicker" ng-model="conta.vencimento"}>  
                    </div>
                    <div class="col s3">
                        <label for="resposta2">Pagamento</label>
                        <input type="date" class="datepicker" ng-model="conta.pagamento" >  
                    </div>
                    <div class="col s2">
                        <br>
                        <p>
                            <input type="checkbox" id="test5" ng-model="conta.pago" />
                            <label for="test5">Pago</label>
                        </p>                    
                     </div>
                  </div>
                  
                  <div class="row">
                    <div class ="col s6 offset-s9">
                        
                        <div class ="col s3">
                            <a class="waves-effect purple btn" ng-click="salvar()">Salvar</a>
                        </div>
                        <div class ="col s3">
                            <a class="waves-effect purple btn" ng-click="cancelar()">Cancelar</a>
                        </div>
                    </div>

                  </div>                      
            </div>	
            <table>
            <tr ng-repeat= "categoria in categorias ">
              <td>{{categoria.nome}}</td>
            </tr>
            </table>
    </div> 
</body>    
</html>