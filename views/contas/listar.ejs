<!doctype html>
<html>
    
<head>
    <head>
        <% include ../includes/head %>
        <script src="https://cdn.firebase.com/js/client/2.4.2/firebase.js"></script>
        <script type="text/javascript" src="/controller/app.js"></script>
        <script type="text/javascript" src="/controller/contas/listarcontoller.js"></script>
    </head>
</head>

<body ng-app = "noexcell">
    <div class= "Container">
        <% include ../includes/header %> 
		<div>
	
		<div ng-controller = "listarController">

          	<h4>Listar todas as contas</h4>	
  		<table class="striped">
          <thead>
            <tr>
                <th data-field="id">Conta</th>
                <th data-field="name">Categoria</th>
                <th data-field="name">Data de vencimento</th>
                <th data-field="price">Valor</th>
            </tr>
          </thead>
  
          <tbody>
            
            <tr ng-repeat= "conta in contas |  orderBy:'data'">
              <td>{{conta.nome}}</td>
              <td>{{conta.categoria}}</td>
              <td>{{conta.data}}</td>
              <td>{{conta.pago}}</td>
            </tr>
          </tbody>
        </table>
    </div>
<% include ../includes/footer %>

</div> 
    <script type="text/javascript" src="/js/initial.js"></script>
</body>    
</html>