<!doctype html>
<html>
    
<head>
    <head>
        <% include ../includes/head %>
        <script src="https://cdn.firebase.com/js/client/2.4.2/firebase.js"></script>
        <script type="text/javascript" src="/controller/app.js"></script>
        <script type="text/javascript" src="/controller/contas/listarcontroller.js"></script>
    </head>
</head>
<body ng-app = "noexcell">
    <div class= "Container-fluid">
        <% include ../includes/header %> 
		<div>
	
		<div ng-controller = "listarcontroller">
        <h4>Valor total: {{total}}</h4>
        <h4>Valor em Aberto: {{total}}</h4>	
  		<table class="striped">
          <thead>
            <tr>
                <th data-field="id">Conta</th>
                <th data-field="name">Categoria</th>
                <th data-field="name">vencimento</th>
                <th data-field="name">Pagamento</th>
               <th data-field="price">Valor</th>
                <th data-field="name">Pago</th>               
            </tr>
          </thead>  
          <tbody>            
            <tr ng-repeat= "conta in contas " max-size="10">
              <td>{{conta.nome}}</td>
              <td>{{conta.categoria.nome}}</td>
              <td>{{conta.vencimento | date : 'dd/MM/yyyy'}}</td>
              <td>{{conta.pagamento}}</td>
              <td>{{conta.valor}}</td>
              <td> <input type="checkbox" id="test5" checked={{conta.pago}}/></td>
              
             </tr>
          </tbody>
        </table>
          <!-- Modal Structure -->
        <div id="novaconta" class="modal">
            <div class="modal-content">
            <% include ../contas/nova %> 
            </div>
            <div class="modal-footer">
            </div>
        </div>  
    </div>
<% include ../includes/footer %>
</div> 
    <script type="text/javascript" src="/js/initial.js"></script>
</body>    
</html>